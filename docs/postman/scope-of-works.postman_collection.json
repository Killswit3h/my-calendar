{
  "info": {
    "name": "Scope of Works API",
    "description": "CRUD endpoints for scope of work (lookup table).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "id", "value": "1" }
  ],
  "item": [
    {
      "name": "List Scope of Works",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/scope-of-works?description=",
          "host": ["{{baseUrl}}"],
          "path": ["api", "scope-of-works"],
          "query": [{ "key": "description", "value": "", "description": "Filter by description (substring)" }]
        }
      }
    },
    {
      "name": "Get Scope of Work by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/scope-of-works/{{id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "scope-of-works", "{{id}}"]
        }
      }
    },
    {
      "name": "Create Scope of Work",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Clearing and Grubbing\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/scope-of-works",
          "host": ["{{baseUrl}}"],
          "path": ["api", "scope-of-works"]
        }
      }
    },
    {
      "name": "Update Scope of Work",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Clearing, Grubbing, and Excavation\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/scope-of-works/{{id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "scope-of-works", "{{id}}"]
        }
      }
    },
    {
      "name": "Delete Scope of Work",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/scope-of-works/{{id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "scope-of-works", "{{id}}"]
        }
      }
    }
  ]
}
